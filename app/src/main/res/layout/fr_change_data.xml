<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="314dp" >



            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/cv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:clickable="true"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2dp"
                card_view:contentPadding="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_changeEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:textSize="16sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="3dp"/>


                    <TextView
                        android:id="@+id/tv_changeEmailEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="kaparray@gmail.com"
                        android:textSize="16sp"
                        android:textColor="#5F97DF"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="6dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/cv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:clickable="true"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2dp"
                card_view:contentPadding="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_changeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Name"
                        android:textSize="16sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="3dp"/>


                    <TextView
                        android:id="@+id/tv_changeNameName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kapitan Array"
                        android:textSize="16sp"
                        android:textColor="#5F97DF"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="6dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>





            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/cv_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:clickable="true"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2dp"
                card_view:contentPadding="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_changeNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Phone"
                        android:textSize="16sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="3dp"/>


                    <TextView
                        android:id="@+id/tv_changeNumberNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+7 926 6543 991"
                        android:textSize="16sp"
                        android:textColor="#5F97DF"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="6dp"/>


                </LinearLayout>
            </android.support.v7.widget.CardView>





            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/cv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:clickable="true"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2dp"
                card_view:contentPadding="0dp">

                <TextView
                    android:id="@+id/tv_changee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Password"
                    android:textSize="16sp"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="18dp"/>



            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/cv_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:clickable="true"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2dp"
                card_view:contentPadding="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_changeAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Age"
                        android:textSize="16sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="3dp"/>


                    <TextView
                        android:id="@+id/tv_changeAgeAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="18"
                        android:textColor="#5F97DF"
                        android:textSize="16sp"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="6dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/cv_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:clickable="true"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2dp"
                card_view:contentPadding="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_changeCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/City"
                        android:textSize="16sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="3dp"/>


                    <TextView
                        android:id="@+id/tv_changeCityCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Moscow"
                        android:textColor="#5F97DF"
                        android:textSize="16sp"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="6dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>